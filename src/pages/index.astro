---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 7); // Only show the latest 7 posts
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 70%;
				margin-left: auto;
				margin-right: auto;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 1.5rem;
				border-radius: 12px;
				width: 100%;
				height: auto;
				object-fit: cover;
			}
			ul li a {
				display: block;
				border: 2px solid rgb(var(--gray-light));
				border-radius: 12px;
				padding: 1rem;
				transition: border-color 0.2s ease;
			}
			ul li a:hover {
				border-color: rgb(var(--accent));
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
			.snippet {
				margin: 0.5rem 0 0;
				color: rgb(var(--gray));
				font-size: 1.2rem;
				line-height: 1.4;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/${post.id}/`}>
									{post.data.heroImage && (
										<img src={post.data.heroImage} alt={post.data.title} class="hero-image" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.description && (
										<p class="snippet">{post.data.description}</p>
									)}
								</a>
							</li>
						))
					}
				</ul>

				<p class="archive-link">
					<a href="/archive">View All Posts â†’</a>
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>